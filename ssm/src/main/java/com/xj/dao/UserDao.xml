<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xj.dao.UserDao">
	<select id="UserLogin" parameterType="User" resultType="User">
		SELECT * FROM myuser WHERE uname=#{uname} AND upasswd=#{upasswd}
	</select>

	<select id="selectUserById" parameterType="Integer" resultType="User">
		SELECT uid,uname,usex,upasswd FROM myuser 
		WHERE uid=#{id}
	</select>
	<select id="selectAllUser" resultType="User">
		SELECT uid,uname,usex,upasswd FROM myuser 
	</select>
	<insert id="addUser" parameterType="User">
		INSERT INTO myuser(uname,usex,upasswd) VALUES(#{uname},#{usex})
	</insert>
	<update id="updateUser" parameterType="User">
		UPDATE myuser SET uname=#{uname},usex=#{usex},upasswd=#{upasswd} 
		WHERE uid=#{uid}
	</update>
	<delete id="deleteUserById" parameterType="Integer">
		DELETE FROM myuser WHERE uid=#{id}
	</delete>
</mapper>